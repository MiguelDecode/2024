---
import Section from "../Section.astro";

import { skills } from "@cv";
---

<Section title="Herramientas">
  <ul>
    {
      skills.map((skill) => {
        return <li>{skill}</li>;
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  li {
    border-radius: 0.375rem;
    background-color: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
